<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TelaLogin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:background">@drawable/containercomponente</item>
        <item name="android:layout_margin">20dp</item>
    </style>
    <style name="Edite_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:padding">20dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:maxLength">25</item>
    </style>
    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:padding">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
    </style>
     <style name="Theme.DuckLibras" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/cor_primaria</item>
        <item name="colorPrimaryContainer">@color/cor_primaria_clara</item>
        <item name="colorSecondary">@color/cor_secundaria</item>
        <item name="colorOnPrimary">@android:color/white</item>
    </style>
    <style name="ButtonPrincipal" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/cor_primaria</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ButtonSecundario" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/cor_primaria</item>
        <item name="android:textColor">@color/cor_primaria</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ButtonPalavra" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/cor_secundaria</item>
        <item name="android:textColor">@color/cor_secundaria</item>
        <item name="cornerRadius">20dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="ToolbarTitle" parent="TextAppearance.Material3.TitleLarge">
    <item name="android:textSize">20sp</item>
    <item name="android:textStyle">bold</item>
    <item name="android:letterSpacing">0.02</item>
</style>
<style name="ButtonPrincipal" parent="Widget.Material3.Button">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">52dp</item>
    <item name="android:layout_weight">1</item>
    <item name="backgroundTint">@color/cor_primaria</item>
    <item name="android:textColor">@color/branco</item>
    <item name="cornerRadius">12dp</item>
    <item name="android:textSize">16sp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
</style>
<style name="ButtonSecundario" parent="Widget.Material3.Button.OutlinedButton">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">52dp</item>
    <item name="android:layout_weight">1</item>
    <item name="strokeColor">@color/cor_primaria</item>
    <item name="strokeWidth">1.5dp</item>
    <item name="android:textColor">@color/cor_primaria</item>
    <item name="cornerRadius">12dp</item>
    <item name="android:textSize">16sp</item>
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
</style>
</resources>
