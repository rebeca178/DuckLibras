<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <LinearLayout
        android:id="@+id/Pontuacao"
        android:layout_width="match_parent"
        android:layout_height="659dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/Star"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pngimg_com___star_png1589" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="250sp"
                android:layout_height="200sp"
                android:layout_weight="1"
                app:srcCompat="@drawable/_000187016" />

            <ImageView
                android:id="@+id/Star"
                android:layout_width="50sp"
                android:layout_height="50sp"
                android:layout_weight="1"
                app:srcCompat="@drawable/pngimg_com___star_png1589" />

        </LinearLayout>

        <TextView
            android:id="@+id/Pontos"
            android:layout_width="wrap_content"
            android:layout_height="74dp"
            android:text="Ponto"
            android:textSize="60sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Barra"
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/home_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/_96_sem_t_tulo_20250515165235"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/Dicionario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/_96_sem_t_tulo_20250515165246"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/Flashcard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/_96_sem_t_tulo_20250515165227"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/Anotacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/_96_sem_t_tulo"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/Traducao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/_96_sem_t_tulo_20250515165339"
            tools:visibility="visible" />
    </LinearLayout>

</LinearLayout>